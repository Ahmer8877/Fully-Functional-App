<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#E0638D"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchData">

    <TextView
        android:id="@+id/storetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="MY STORE"
        android:layout_gravity="center"
        android:textColor="#E7C013"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded,TextContrastCheck"/>
    <TextView
        android:text="Search : "
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="serif-monospace"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextUser"
            android:inputType="text"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:layout_marginTop="12dp"
            android:hint="UserName"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"
            tools:ignore="HardcodedText" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnsearch"
        android:text="Search"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFF" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="280dp"
        android:layout_margin="15dp"
        android:background="@drawable/cornershape"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/EmailSearch"
            android:background="@drawable/apnishape"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Email :"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/PasswordSearch"
            android:background="@drawable/apnishape"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Password :"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            />

    </LinearLayout>

    

</LinearLayout>